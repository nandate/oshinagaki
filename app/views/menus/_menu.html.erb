<div id="menu_<%=menu.id%>" class="col-md-4">
  <li class="panel panel-default">
    <div class="panel panel-heading">
      <%= link_to menu.author, menu ,class: "link_black"%>
      <%= link_to menu, method: :delete, data: { confirm: "削除しますか?"}, remote: true  do %>
        <span class="glyphicon glyphicon-trash pull-right"></span>
      <% end %>
    </div>
    <div class="panel-body">
      <span><%= menu.content %></span>
      <%= image_tag menu.image_url,class:"img-responsive",id: "image-#{menu.id}" ,:data => { :target => "#myModal-#{menu.id}", :toggle => "modal"} %>

    </div>
  </li>

  <div class="modal fade" id="myModal-<%= menu.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <%= image_tag menu.image_url, class:"img-responsive"%>
        </div>
      </div>
    </div>
  </div>

</div>
