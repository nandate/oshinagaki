<%= form_for(@estimate) do |f| %>
  <div class="form-group">
    <%= f.label :name, "イベント名" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Compose event name..." %>
  </div>
  <div class="form-group">
    <%= f.label :term, "期間" %>
    <%= f.text_field :term, class: "form-control", placeholder: "Compose event term..." %>
  </div>
  <%= f.submit "Create", class: "btn btn-primary" %>
<% end %>
